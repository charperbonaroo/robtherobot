{
  "name": "rob-server",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build:skip-types": "esbuild --platform=node --target=node18 --sourcemap --bundle --outdir=dist src/main.ts",
    "build": "yarn type-check && yarn build:skip-types",
    "start": "yarn build && node dist/main.js"
  },
  "dependencies": {
    "@fastify/static": "^8.0.4",
    "@fastify/websocket": "^11.0.2",
    "esbuild": "^0.24.0",
    "fastify": "^5.2.1",
    "rob-host": "workspace:*",
    "rob-web": "workspace:*",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.12.0",
    "nodemon": "^3.1.7"
  }
}
